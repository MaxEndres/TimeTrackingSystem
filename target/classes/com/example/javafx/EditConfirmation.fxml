<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.EditConfirmation">
   <children>
      <Label fx:id="currentEntryLabel" layoutX="126.0" layoutY="69.0" text="Current entry: " />
      <Label fx:id="newTimeLabel" layoutX="121.0" layoutY="147.0" text="New Time: " />
      <Label fx:id="descriptionLabel" layoutX="120.0" layoutY="192.0" text="Description:" />
      <TextArea fx:id="descriptionTextArea" layoutX="120.0" layoutY="224.0" prefHeight="110.0" prefWidth="335.0" />
      <Button fx:id="sendRequestButton" layoutX="261.0" layoutY="352.0" mnemonicParsing="false" onAction="#sendRequestButtonOnAction" text="Send request" />
      <Label fx:id="punktLabel" layoutX="299.0" layoutY="147.0" text=":" />
      <ComboBox fx:id="hourComboBox" editable="true" layoutX="228.0" layoutY="143.0" prefHeight="25.0" prefWidth="59.0" visibleRowCount="60" />
      <ComboBox fx:id="minuteComboBox" editable="true" layoutX="310.0" layoutY="143.0" prefHeight="25.0" prefWidth="59.0" visibleRowCount="60" />
      <Label fx:id="timestampLabel" layoutX="220.0" layoutY="36.0" text="Timestamp ID:" />
      <Label fx:id="currentEntryLabel2" layoutX="136.0" layoutY="79.0" />
      <RadioButton fx:id="deleteRadioButton" layoutX="133.0" layoutY="108.0" mnemonicParsing="false" onAction="#addRequestOnAction" prefHeight="17.0" prefWidth="93.0" text="Delete Entry">
         <toggleGroup>
            <ToggleGroup fx:id="selection" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="changeRadioButton" layoutX="347.0" layoutY="108.0" mnemonicParsing="false" onAction="#addRequestOnAction" text="Change Entry" toggleGroup="$selection" />
   </children>
</AnchorPane>
